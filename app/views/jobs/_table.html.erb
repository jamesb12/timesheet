<div id="job-table">
<table>
<tr>
	<th>Customer</th>
	<th>Project</th>
	<th>Hours</th>
	<th>Description</th>
	<th>Date</th>	
</tr>
<% @jobloop = Job.where(date: @date) %>
	<% @jobloop.each do |u| %>
		<tr>
			<td><%= u.customer %></td>
			<td><%= u.project %></td>
			<td><%= u.hours %></td>
			<td><%= u.description %></td>
			<td><%= u.date %></td>
			<td><%= link_to 'Edit', edit_job_path(u) %></td>
        	<td><%= link_to 'Destroy', u, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
</table>
</div>