<div id="job-table">
<table>
<tr>
	<th>Customer</th>
	<th>Projects</th>
	<th><%= link_to "[Add Customer]" %></th>
</tr>
<% @test_for_job_count = 0 %>
<% @jobloop = Job.all %>
