<% @cust_counter = 0 %>

<% #--creates new hash,fills hash with values,searches for dupes,print values/delete dupes %>




<% h = Hash.new(0) %>

<% @jobloop.each do |p| %>
<% @counter += 1 %>
<% [p.customer].each{ |e| h[e] += 1 } %>



<% end %>
	<% @projecterino = false %>

	<% @jobloop.each do |u| %>
		<tr>
			<% if h[u.customer] == 1 %>
				<td><%= link_to u.customer,job_path(u)%></td>
				<%if @projecterino == false %>
					<% @jobloop.each do |o| %>
						<% if o.customer == @job.customer %>
							<td><%= o.project %></td>
						<% end %>					
					<% end %>
				<% @projecterino = true %>
				<% end %>
			<% end %>

			<% if h[u.customer] > 1 %>
				<% if h[u.customer] != 567 %>
					<td><%= link_to u.customer,job_path(u)%></td>
				<% end %>
				<td> </td>
								
				
				<% h[u.customer] = 567 %>
			<% end %>
			<% if @job.customer == u.customer %>
			<td><%= u.project %></td>
			<% end %>
		</tr>
	<% end %>

</table>

